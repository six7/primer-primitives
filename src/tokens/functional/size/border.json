{
  "boxShadow": {
    "thin": {
      "$type": "string",
      "$value": "inset 0 0 0 {borderWidth.thin}",
      "$description": "Thin shadow for borders"
    },
    "thick": {
      "$type": "string",
      "$value": "inset 0 0 0 {borderWidth.thick}"
    },
    "thicker": {
      "$type": "string",
      "$value": "inset 0 0 0 {borderWidth.thicker}"
    }
  },
  "borderWidth": {
    "thin": {
      "$type": "string",
      "$value": "max(1px, 0.0625rem)"
    },
    "thick": {
      "$type": "string",
      "$value": "max(2px, 0.125rem)"
    },
    "thicker": {
      "$type": "string",
      "$value": "max(4px, 0.25rem)"
    }
  },
  "borderRadius": {
    "small": {
      "$type": "dimension",
      "$value": "3px"
    },
    "medium": {
      "$type": "dimension",
      "$value": "6px"
    },
    "large": {
      "$type": "dimension",
      "$value": "12px"
    },
    "full": {
      "$type": "dimension",
      "$value": "9999px",
      "$description": "Use this border radius for pill shaped elements"
    }
  },
  "outline": {
    "focus": {
      "offset": {
        "$type": "dimension",
        "$value": "-2px"
      },
      "width": {
        "$type": "dimension",
        "$value": "2px"
      }
    }
  }
}